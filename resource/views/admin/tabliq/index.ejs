<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>تبلیغ ها</h2>
    <div class="btn-group">
        <a href="/admin/tabliq/create" class="btn btn-sm btn-primary">ایجاد تبلیغ جدید</a>
        <a href="/admin/categories" class="btn btn-sm btn-outline-info">بخش دسته ها</a>
    </div>
</div>
<div class="table-responsive table-active">
    <table class="table table-striped table-bordered ">
        <thead class="table-dark">
        <tr class="">
            <th>عنوان پست</th>
            <th>تنظیمات</th>
        </tr>
        </thead>
        <tbody>
        <% tabliq.docs.forEach(tabliq => { %>
        <tr>
            <td><a href="" class="text-dark"><%= tabliq.title %></a></td>


            <td>
                <form action="/admin/tabliq/<%= tabliq._id %>?_method=DELETE" method="post">
                    <div class="btn-group btn-group-sm">
                        <!--<a href="/admin/tabliq/<%= tabliq._id %>/edit"  class="btn btn-primary">ویرایش</a>-->
                        <button type="submit" class="btn btn-info">حذف</button>
                    </div>
                </form>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>

    <%- include(viewPath('layouts/pagination') ,{ pagination : tabliq}) %>
</div>
    
    